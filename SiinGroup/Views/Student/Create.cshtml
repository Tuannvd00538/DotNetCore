
@{
    ViewData["Title"] = "Create";
}

<form action="SaveStudent" method="post" style="margin-top:10px;">
    <div class="form-group">
        <label for="id">ID:</label>
        <input type="number" class="form-control" name="Student.Id" />
    </div>
    <div class="form-group">
        <label for="rollnumber">RollNumber:</label>
        <input type="text" class="form-control" name="Student.RollNumber" />
    </div>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="Student.Name" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>